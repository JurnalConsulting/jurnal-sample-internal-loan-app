    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
        .modal-title
          = t('form.modal.title').html_safe
      .modal-body
        %p{:class=>"term-content"}
          = t('form.modal.content').html_safe
      .modal-footer
        %button.btn-primary{:class=>"btn submit_btn_dummy"}
          = t('form.button.agree')

